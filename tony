    <script>
        // Initialize EmailJS (Replace with your Public Key)
        (function() {
            emailjs.init("YOUR_PUBLIC_KEY"); 
        })();

        let cart = [];
        const drawer = document.getElementById('cart-drawer');
        const carousel = document.getElementById('carousel');

        function toggleCart() {
            drawer.classList.toggle('open');
        }

        function scrollCarousel(dist) {
            carousel.scrollBy({ left: dist, behavior: 'smooth' });
        }

        function addToCart(name, price) {
            cart.push({ name, price });
            updateCartUI();
            if(!drawer.classList.contains('open')) toggleCart();
        }

        function updateCartUI() {
            const container = document.getElementById('cart-items');
            const count = document.getElementById('cart-count');
            const totalEl = document.getElementById('cart-total');
            
            count.innerText = cart.length;
            
            if(cart.length === 0) {
                container.innerHTML = '<p class="text-gray-500 text-center">Cart is empty</p>';
                totalEl.innerText = '₹0';
                return;
            }

            let total = 0;
            container.innerHTML = cart.map((item, index) => {
                total += item.price;
                return `
                    <div class="flex justify-between items-center bg-gray-50 p-3 rounded-lg">
                        <div>
                            <p class="font-semibold">${item.name}</p>
                            <p class="text-sm text-gray-600">₹${item.price}</p>
                        </div>
                        <button onclick="removeItem(${index})" class="text-red-500"><i class="fas fa-trash"></i></button>
                    </div>
                `;
            }).join('');
            
            totalEl.innerText = `₹${total}`;
        }

        function removeItem(index) {
            cart.splice(index, 1);
            updateCartUI();
        }

        // Email Order Submission
        document.getElementById('order-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            if(cart.length === 0) return alert("Add items to cart first!");

            const name = document.getElementById('cust-name').value;
            const phone = document.getElementById('cust-phone').value;
            const itemList = cart.map(i => `${i.name} (₹${i.price})`).join(', ');
            const total = document.getElementById('cart-total').innerText;

            const templateParams = {
                to_email: 'asindtony@gmail.com',
                from_name: name,
                phone: phone,
                message: `New Order: ${itemList}. Total: ${total}`
            };

            // Replace YOUR_SERVICE_ID and YOUR_TEMPLATE_ID with yours from EmailJS
            emailjs.send('YOUR_SERVICE_ID', 'YOUR_TEMPLATE_ID', templateParams)
                .then(() => {
                    alert('Order Sent Successfully! We will contact you soon.');
                    cart = [];
                    updateCartUI();
                    toggleCart();
                }, (err) => {
                    alert('Failed to send order. Please try WhatsApp instead.');
                    console.error(err);
                });
        });
    </script>
